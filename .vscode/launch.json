{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET API Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/ApiEnglish.API/bin/Debug/net10.0/ApiEnglish.dll",
      "cwd": "${workspaceFolder}/ApiEnglish.API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
